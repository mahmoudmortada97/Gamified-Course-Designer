@using WebApplication4.Models;

@{
    Instructor user = null;
    if(Session["user"] == null)
    {
        Response.Redirect("/lessons/");
    }
    else
    {
        user = (Instructor)Session["user"];
    }
}    

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Gamified Course Designer</title>
    <link href="../css/style.css" rel="stylesheet" type="text/css" media="screen" />
</head>
<body>
    <div class="header">
        <div class="logo">
            <a href="/courses/">
                <img src="../images/logo.png" width="120" style="float:left; margin-left:10px;" />
            </a>
        </div>
        <h4 style="padding-top:30px; margin-left:20px; float:left">Gamified Course Designer</h4>

        <div class="logout">
            <a href="/logout/">
                Log out
            </a>
        </div>

    </div>
    <div class="page">

        <div style="float:left;">
            <div class="profile">
                <h4><u>Profile</u></h4>
                <p><strong>Name </strong> @user.Name</p>
                <p><strong>Phone </strong> @user.Phone</p>
                <p><strong>Email </strong> @user.Email<br></p>

                <a href="/edit_user/" style="float:right">Edit My Profle</a>
            </div>

        </div>
        <div style="float:right; ">
            <div class="posts">

                <h3><u>Publish New Lesson</u></h3>
                <form action="" method="post" enctype="multipart/form-data">
                    @model int
                     <input type="hidden" value="@Model" name="course_id"/>
                    <strong>Lesson Number</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="number" name="order" style="width:340px;" />
                    <br /><br />
                    <strong>Name</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="text" name="name" style="width:340px;" />
                    <br /><br />
                    <strong>Description</strong><br>
                    <textarea name="description" style="height:150px; width:100%"></textarea>
                    <br /><br />
                    <strong>Text Material</strong>
                    <textarea name="material_text" style="height:150px; width:100%"></textarea>
                    <br /><br />
                    <strong>Vedio Material</strong>
                    <input type="file" name="material_vedio" style="width:340px;" />
                    <br /><br />
                    <strong>Audio Material</strong>
                    <input type="file" name="material_mp3" style="width:340px;" />
                    <br /><br />
                    <strong>PDF Material</strong>
                    <input type="file" name="material_pdf" style="width:340px;" />
                    <br /><br />
                    <strong>Image Material</strong>
                    <input type="file" name="material_image" style="width:340px;" />
                    <br /><br />
                    <input type="submit" class="button" value="Publish Now" />
                </form>



                <div style="clear:both"></div>
            </div>
        </div>

    </div>
</body>
</html>